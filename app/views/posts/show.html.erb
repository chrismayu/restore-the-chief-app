		</div>
<div class="content">
			<!-- blog box -->
			<div class="box five first blog single">
				<!-- date-->
				<div class="date">
					<span class="day"> <%= @post.display_date.strftime("%d") %> </span>
					<span class="month"> <%= @post.display_date.strftime("%b") %> </span>
					<span class="year"> <%= @post.display_date.strftime("%Y") %> </span>
				</div> 
			</div>	
		    
			
			<div class="box four-five last blog single">
			
				<!-- blog headline-->
				<h2><%= @post.title %></h2>
				<!-- / blog headline--> 

				
				 
			</div>	
		    
		 
		
			<div class="bold_line"></div>  
			<div class="box full single">

							
			
				<!-- blog text-->
				<p>
					 <%= @post.content.html_safe %>
					 </p>
 

 
 
				<!-- /blog text-->
			
			</div>
						 
						 
			<!-- / blog box -->

 
 
	 <% if user_signed_in? %>
	   <% if current_user.has_role? :admin %>
 
<p>
  <b>Published:</b>
  <%= @post.published %>
</p>
 
